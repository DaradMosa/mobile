<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:backgroundTint="#141111"
    tools:context=".introMain">


    <ImageView
        android:id="@+id/img1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-16dp"
        android:layout_marginEnd="-16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/main1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/img1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintVertical_bias="0.48"
        tools:context=".introMain">

        <TextView
            android:id="@+id/life"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="221dp"
            android:fontFamily="@font/fontmain"
            android:text="Life is short but the "
            android:textAlignment="center"
            android:textColor="#1D0303"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="@+id/desc"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/world"
            android:layout_width="149dp"
            android:layout_height="40dp"
            android:layout_marginStart="61dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/fontmain"
            android:text="world is"
            android:textAlignment="center"
            android:textColor="#1D0303"
            android:textSize="40dp"
            app:layout_constraintBottom_toTopOf="@+id/desc"
            app:layout_constraintEnd_toEndOf="@+id/desc"
            app:layout_constraintEnd_toStartOf="@+id/wide"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/wide"
            android:layout_width="101dp"
            android:layout_height="40dp"
            android:layout_marginTop="497dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="21dp"
            android:fontFamily="@font/fontmain"
            android:text="wide"
            android:textAlignment="center"
            android:textColor="#FF5722"
            android:textSize="40dp"
            app:layout_constraintBottom_toTopOf="@+id/desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/world"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="378dp"
            android:layout_height="173dp"
            android:layout_marginBottom="144dp"
            android:fontFamily="@font/fontdesc"
            android:text="At Friends tours and travel, we customize reliable and trustworthy educational tours to destinations all over the world "
            android:textAlignment="center"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wide" />

        <Button
            android:id="@+id/Getstarted"
            android:layout_width="384dp"
            android:layout_height="84dp"
            android:layout_marginEnd="7dp"
            android:backgroundTint="#DC0F0F"
            android:text="Get Started"
            android:textSize="30dp"
            app:cornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/desc"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desc"
            app:layout_constraintVertical_bias="0.753" />






    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>